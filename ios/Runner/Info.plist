<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>

    <key>CFBundleDisplayName</key>
    <string>Chiwi</string>

    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>

    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>

    <key>CFBundleIcons</key>
    <dict>
      <key>CFBundlePrimaryIcon</key>
      <dict>
        <key>CFBundleIconFiles</key>
        <array>
          <string>AppIcon</string>
        </array>
        <key>UIPrerenderedIcon</key>
        <false/>
      </dict>
    </dict>

    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>

    <key>CFBundleName</key>
    <string>chiguiro_front_app</string>

    <key>CFBundlePackageType</key>
    <string>APPL</string>

    <key>CFBundleShortVersionString</key>
    <string>$(FLUTTER_BUILD_NAME)</string>

    <key>CFBundleSignature</key>
    <string>????</string>

    <key>CFBundleVersion</key>
    <string>$(FLUTTER_BUILD_NUMBER)</string>

    <key>LSRequiresIPhoneOS</key>
    <true/>

    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>

    <key>UIMainStoryboardFile</key>
    <string>Main</string>

    <key>UISupportedInterfaceOrientations</key>
    <array>
      <string>UIInterfaceOrientationPortrait</string>
      <string>UIInterfaceOrientationLandscapeLeft</string>
      <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
      <string>UIInterfaceOrientationPortrait</string>
      <string>UIInterfaceOrientationPortraitUpsideDown</string>
      <string>UIInterfaceOrientationLandscapeLeft</string>
      <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <key>CADisableMinimumFrameDurationOnPhone</key>
    <true/>

    <key>UIApplicationSupportsIndirectInputEvents</key>
    <true/>

    <key>UIStatusBarHidden</key>
    <false/>

    <!-- Esquemas permitidos para redirecciones -->
    <key>LSApplicationQueriesSchemes</key>
    <array>
      <string>http</string>
      <string>https</string>
    </array>

    <!-- Notificaciones -->
    <key>NSUserNotificationAlertStyle</key>
    <string>alert</string>
    <key>UNUserNotificationCenterDelegate</key>
    <true/>

    <!-- Background Modes (solo los necesarios para FCM/push) -->
    <key>UIBackgroundModes</key>
    <array>
      <string>fetch</string>
      <string>remote-notification</string>
    </array>

    <!-- PERMISOS -->

    <!-- Ubicación: solo mientras se usa la app -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>Usamos tu ubicación únicamente mientras utilizas la app para validar el lugar donde diligencias encuestas. Por ejemplo, asociamos coordenadas al envío.</string>

    <!-- Cámara -->
    <key>NSCameraUsageDescription</key>
    <string>Usamos la cámara para tomar fotos como evidencia y adjuntarlas a respuestas de encuestas (por ejemplo, señalización del sitio o condiciones del entorno).</string>

    <!-- Micrófono: grabación solo durante la encuesta -->
    <key>NSMicrophoneUsageDescription</key>
    <string>Usamos el micrófono para grabar el audio mientras diligencias la encuesta; la grabación se detiene cuando sales de la encuesta.</string>

    <!-- Firebase -->
    <key>FirebaseAppDelegateProxyEnabled</key>
    <false/>
  </dict>
</plist>
